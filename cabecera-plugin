/* Impedir ejecución de PHP en la ruta. Incluye siempre esto en tus plugins. Sustituye "mi-plugin" y "mi_plugin" por el slug de tu plugin */
defined( 'ABSPATH' ) || die( 'No script kiddies please!' );
/* INIT para internacionalización. Incluye siempre esto en tus plugins */
function mi_plugin_init() {
	load_plugin_textdomain( 'mi-plugin', false, dirname( plugin_basename( __FILE__ ) ) . '/languages' );
}
add_action( 'plugins_loaded', 'mi_plugin_init' );
